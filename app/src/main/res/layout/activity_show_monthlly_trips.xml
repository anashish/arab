<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_monthlly_trips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    >
    <include
        android:id="@+id/tmToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        layout="@layout/actionbar_layout_allscreen_driver"/>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_below="@+id/tmToolbar"
        android:id="@+id/tmListview"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_margin="@dimen/_2sdp"
        android:padding="@dimen/_2sdp"
        android:divider="@color/colorAccent"
        android:dividerHeight="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/tmTvEmptyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_no_booking_available"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
