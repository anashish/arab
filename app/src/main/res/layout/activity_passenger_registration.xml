<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_login_page">

    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:id="@+id/p_reg_iv_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_back_green"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="none"
        android:scrollbars="none"
        android:layout_below="@+id/p_reg_iv_back">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/reg_fl_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/p_reg_iv_passenger"
                    android:layout_gravity="center"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/icon_passenger"
                    android:background="@drawable/person"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/p_reg_iv_cam"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/icon_camera_01"/>
            </FrameLayout>

            <EditText
                android:id="@+id/p_reg_ed_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_below="@+id/reg_fl_top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bg_edittext_green"
                android:ems="10"
                android:imeOptions="actionNext"
                android:hint="User Name"
                android:textColorHint="@color/colorPrimary"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/p_reg_ed_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:layout_below="@+id/p_reg_ed_username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edittext_green"
                android:ems="10"
                android:textColorHint="@color/colorPrimary"
                android:hint="@string/full_name"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/p_reg_ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/p_reg_ed_fullname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edittext_green"
                android:ems="10"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:textColorHint="@color/colorPrimary"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/p_reg_ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_below="@+id/p_reg_ed_email"
                android:layout_centerHorizontal="true"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edittext_green"
                android:ems="10"
                android:hint="@string/password"
                android:textColorHint="@color/colorPrimary"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/p_reg_confirm_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_below="@+id/p_reg_ed_password"
                android:imeOptions="actionDone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edittext_green"
                android:ems="10"
                android:hint="@string/confirm_password"
                android:textColorHint="@color/colorPrimary"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                android:singleLine="true"/>

                <FrameLayout
                    android:id="@+id/p_reg_fl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/p_reg_confirm_pass">
                    <Spinner
                        android:id="@+id/p_reg_spn_gender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:background="@drawable/bg_edittext_green"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_1sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/icon_drop_down"/>
                </FrameLayout>



            <ImageView
                android:id="@+id/p_reg_term_accepted"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/selector_bg_checkbox"
                android:layout_below="@+id/p_reg_fl"/>

            <TextView
                android:id="@+id/p_reg_tv_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_reg_fl"
                android:layout_toRightOf="@+id/p_reg_term_accepted"
                android:layout_toEndOf="@+id/p_reg_term_accepted"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center"
                android:paddingTop="@dimen/_3sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/by_submitting_this_form_i_agree_to_taxi_app_terms_contditions_i_hereby_confirm_that_the_information_provided_is_accurate_complete_up_to_date"
                android:textSize="@dimen/_10sdp"/>
            <Button
                android:id="@+id/p_reg_b_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_reg_tv_terms"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                android:padding="@dimen/_10sdp"
                android:text="@string/sign_up"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/p_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</RelativeLayout>
