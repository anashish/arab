<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_notification_req"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.mishwar.driver_ui.NotificationReqActivity">

    <include
        android:id="@+id/driverCurrentRideNotificationToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        layout="@layout/actionbar_layout_allscreen_driver"/>

    <ListView
        android:id="@+id/DriverReqlistview"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_margin="@dimen/_2sdp"
        android:padding="@dimen/_2sdp"
        android:divider="@color/light_gray"
        android:dividerHeight="@dimen/_5sdp"
        android:layout_below="@+id/driverCurrentRideNotificationToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>

