            android:layout_marginTop="@dimen/_5sdp"

            >
        </View>

        <Button
            android:id="@+id/btnRatingSubmit"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_ly_green_btn"
