<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center"
    android:background="@color/transperant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/bg_ly_tripletter_border">

        <TextView
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:text="@string/text_driver_info"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_ly_tripletter_heder"
            />

        <RelativeLayout
            android:layout_below="@+id/Header"
            android:id="@+id/ProfileHeader"
            android:layout_width="match_parent"
            android:background="@color/light_gray"
            android:layout_height="@dimen/_62sdp">

            <ImageView
                android:id="@+id/iv_VI_profilePic"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/person"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/ProfileHeader"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@color/colorPrimaryDark"
            >
        </View>

        <LinearLayout
            android:layout_below="@+id/line"
            android:id="@+id/ly_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp">


            <LinearLayout
                android:layout_below="@+id/line"
                android:id="@+id/ly_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_driver_name"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/tv_name_req"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:hint="jack Little"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="right"
                    android:textColorHint="@color/colorPrimary"

                    />
            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/light_gray"
                android:layout_marginTop="@dimen/_5sdp">
            </View>

            <LinearLayout
                android:id="@+id/ly_carType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">


                <TextView
                    android:id="@+id/tv_carType"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_driver_car_type"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/tv_carType_req"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:hint="Sedan"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="right"
                    android:textColorHint="@color/colorPrimary"

                    />
            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/light_gray"
                android:layout_marginTop="@dimen/_5sdp">
            </View>


            <LinearLayout
                android:id="@+id/ly_carFacility"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">


                <TextView
                    android:id="@+id/tv_carFacility"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_driver_car_facility"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/tv_carFacility_name"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:hint="No facility"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="right"
                    android:textColorHint="@color/colorPrimary"

                    />
            </LinearLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/light_gray"
                android:layout_marginTop="@dimen/_5sdp">
            </View>
            <LinearLayout
                android:id="@+id/ly_driver_rating"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">


                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_driver_rating"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/tv_driver_rating"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:layout_weight="1"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="right"
                    android:textColorHint="@color/colorPrimary"

                    />
            </LinearLayout>

            <View
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/ly_driver_rating"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/light_gray"
                android:layout_marginTop="@dimen/_5sdp">
            </View>

            <LinearLayout
                android:id="@+id/ly_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/_10sdp">

                <Button
                    android:id="@+id/btn_submit_request"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:text="@string/text_submit_req"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_ly_green_btn"
                    />

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@null"/>
                <Button
                    android:id="@+id/btn_cancel_request"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:text="@string/text_cancel"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_ly_green_btn"

                    />
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

