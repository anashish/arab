<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_single_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transperant"
    >

    <include
        android:id="@+id/NotificationToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        layout="@layout/actionbar_layout_allscreen_driver"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:id="@+id/lyTm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_ly_tripletter_border">

                <TextView
                    android:id="@+id/Header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:text="New monthly request"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_ly_tripletter_heder"
                    />

                <RelativeLayout
                    android:layout_below="@+id/Header"
                    android:id="@+id/lyTmBookingId"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    >

                    <TextView
                        android:id="@+id/tvTmBookingId"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_monthly_bookingid"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        />
                    <TextView
                        android:id="@+id/tvTextTmBookingId"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:hint="Booking id"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:minLines="1"
                        android:textColorHint="@color/colorPrimary"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/lyTmBookingId"
                    android:id="@+id/lyTmName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    >

                    <TextView
                        android:id="@+id/tvTmName"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_driver_name"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:textAlignment="textStart"
                        />
                    <TextView
                        android:id="@+id/tvTmNameText"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:hint="jack Little"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_14sdp"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:minLines="1"
                        android:textColorHint="@color/colorPrimary"

                        />

                </RelativeLayout>
                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/lyTmName"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/light_gray"
                    >
                </View>

                <RelativeLayout
                    android:layout_below="@+id/line2"
                    android:id="@+id/lyTmPickupAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"            >

                    <TextView
                        android:id="@+id/tvTmAddress"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_monthly_from"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColorHint="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/lyTmAddressText"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:hint="indore"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_14sdp"
                        android:maxLines="4"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:textColorHint="@color/colorPrimary"

                        />

                </RelativeLayout>
                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/lyTmPickupAddress"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/light_gray"
                    >
                </View>

                <RelativeLayout
                    android:layout_below="@+id/line3"
                    android:id="@+id/lyTmDestination"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"            >

                    <TextView
                        android:id="@+id/tvTmDestination"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_monthly_to"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:maxLines="4"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:textColorHint="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/tvTmDestinationText"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:hint="indore"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_14sdp"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="4"
                        android:layout_centerVertical="true"
                        android:textColorHint="@color/colorPrimary"

                        />

                </RelativeLayout>
                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/lyTmDestination"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/light_gray"
                    >
                </View>

                <RelativeLayout
                    android:layout_below="@+id/line4"
                    android:id="@+id/tvTmtime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"            >

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_monthly_time"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:textColorHint="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/tvTmTripTime"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:hint="10:00"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_14sdp"
                        android:gravity="right"
                        android:maxLines="2"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:textColorHint="@color/colorPrimary"

                        />

                </RelativeLayout>
                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/tvTmtime"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/light_gray"
                    >
                </View>

                <RelativeLayout
                    android:layout_below="@+id/line5"
                    android:id="@+id/lyTmDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"            >

                    <TextView
                        android:id="@+id/tvTmDate"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:hint="@string/tripmonthly_text_date"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:textColorHint="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/tvTmDateText"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:hint="10-12-2016"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_14sdp"
                        android:gravity="right"
                        android:maxLines="2"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:textColorHint="@color/colorPrimary"

                        />

                </RelativeLayout>

                <View
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/lyTmDate"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/light_gray"
                    >
                </View>


                <RelativeLayout
                    android:layout_below="@+id/line7"
                    android:id="@+id/lyTmCost"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"            >

                    <TextView
                        android:id="@+id/tvTmCost"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_monthly_cost"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:textColorHint="@color/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/lyTmCostText"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:hint="$"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_14sdp"
                        android:gravity="right"
                        android:maxLines="2"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:textColorHint="@color/colorPrimary"

                        />

                </RelativeLayout>
                <View
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/lyTmCost"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/light_gray"
                    >
                </View>

                <RelativeLayout
                    android:layout_below="@+id/line6"
                    android:id="@+id/lyTmMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"            >

                    <TextView
                        android:id="@+id/tvTmMobileNo"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_monthly_contact"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp"
                        android:padding="@dimen/_2sdp"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:textColorHint="@color/colorPrimary"
                        android:textAlignment="textStart"
                        />
                    <TextView
                        android:id="@+id/tvTmMobileNoText"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:hint="7 km"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_14sdp"
                        android:gravity="right"
                        android:maxLines="2"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:textColorHint="@color/colorPrimary"

                        />

                </RelativeLayout>
                <View
                    android:id="@+id/line9"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/lyTmMobileNo"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/light_gray"
                    >
                </View>

                <TextView
                    android:layout_below="@+id/line9"
                    android:id="@+id/btnTmCall"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/bg_ly_payriciept_btn"
                    android:text="@string/text_call"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:drawableLeft="@drawable/telephone_icon"
                    />

                <Button
                    android:layout_below="@+id/line9"
                    android:id="@+id/btnTmCancel"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/bg_ly_green_btn"
                    android:text="@string/text_cancel"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    />

            </RelativeLayout>

            <Button
                android:layout_below="@+id/lyTm"
                android:id="@+id/btnTmPayWithPaypal"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bg_ly_border"
                android:text="@string/text_btn_minthly"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/tvExpireNote"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_expire_tm"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

