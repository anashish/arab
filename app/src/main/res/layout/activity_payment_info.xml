<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    >
    <include
        android:id="@+id/actionbarPaymentOnfo"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        layout="@layout/actionbar_layout_allscreen_driver"/>

    <LinearLayout
        android:layout_below="@+id/lyPaymentInfoTotalEarn"
        android:id="@+id/lyPaymentInfoCash"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:gravity="center_horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/cash"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_cash"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvPaymentInfoCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 0.0"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lyPaymentInfoPaypal"
        android:layout_below="@+id/lyPaymentInfoCash"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:gravity="center_horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/paypal"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_paypal"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvPaymentInfoPaypal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 0.0"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/lyPaymentInfoPaypal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_18sdp">
    </View>

    <LinearLayout
        android:id="@+id/lyPaymentInfoTotalEarn"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/actionbarPaymentOnfo"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/bg_dialog_box"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_earning_text"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvPaymentInfoTotalEarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 0.0"
            android:gravity="left"
            android:layout_gravity="center"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_weight="1"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/lyPaymentDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center"
        android:padding="@dimen/_4sdp"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:id="@+id/linearDatePicker1"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            >
            <TextView
                android:id="@+id/tvTxtDatePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_monthly_from"
                android:textSize="@dimen/_14sdp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvPaymentInfoDatePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/date_hint"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_calendar"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/bg_dialog_box"
                android:layout_centerVertical="true"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearDatePicker2"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvTxtDatePicker2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/text_monthly_to"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tvPaymentInfoDatePicker2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/date_hint"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_calendar"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/bg_dialog_box"
                android:layout_centerVertical="true"
                />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btnPaymentInfoSubmit"
        android:layout_below="@+id/lyPaymentDatePicker"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="@string/submit"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_ly_green_btn"/>

    <TextView
        android:id="@+id/tvAddAccount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:text="@string/add_paypal_id_text"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/plus"
        android:background="@drawable/bg_ly_border"
        android:visibility="visible"
        />


</RelativeLayout>
